/* public style */
/* tab style */
.tab{
  display: flex;
  height: 93rpx;
  text-align: center;
  border-bottom: 1px solid #605b96;
}
.tab .tabitem{
  flex: 1;
  height: 93rpx;
  font-weight: 700;
  line-height: 93rpx;
  font-size: 28rpx;
  color: #fff;
  }
.tab .cur{
  position: relative;
  color: #4a4388;
  background: linear-gradient(#f7e2ba,#fff1de);
}
.tab .cur:after{
  content: '';
  position: absolute;
  bottom: -28rpx;
  left: 50%;
  width: 0;
  height: 0;
  margin-left: -15rpx;
  border:15rpx solid transparent;
  border-top-color: #fff1de;
}
.qxpf .img{
  display: block;
  width: 552rpx;
  height: 550rpx;
  margin: 0 auto;
}
.qxpf .img-desc{
  position: relative;
  padding: 20rpx 90rpx 16rpx 90rpx;
  margin-bottom: 24rpx;
  line-height: 1.6;
  background: #322c68;
}
.qxpf .img-desc:before{
  content: '';
  position: absolute;
  top: -28rpx;
  left: 145rpx;
  width: 0;
  height: 0;
  border:15rpx solid transparent;
  border-bottom-color: #322c68;
}
.qxpf .tit{
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
}
.qxpf .desc{
  font-size: 28rpx;
  color: #85839f;
}

.pifu-list{
  width: 650rpx;
  margin:0 auto;
  text-align: center;
  white-space: nowrap;
}
.pifu-list .pifu-list-item{
  position: relative;
  display: inline-block;
  width: 28rpx;
  height: 236rpx;
  padding: 0 18rpx;
  margin: 0 6rpx 0 8rpx;
  background: url(https://moba.res.netease.com/pc/gw/20180725180621/img/zx/bg_pifu_list_item_cd721ae.jpg) no-repeat;
  background-size: contain
}
.pifu-list .pifu-list-item.active{
  width: 248rpx;
  background: url(https://moba.res.netease.com/pc/gw/20180725180621/img/zx/bg_pifu_list_item_cur_8774ff6.jpg) no-repeat;
  background-size: contain
}
.pifu-list .pifu-list-item .pifu-list-tit{
  position: absolute;
  left: 16rpx;
  display: block;
  width: 28rpx;
  padding-top: 5rpx;
  font-size: 24rpx;
  line-height: 1.1;
  color: #fff;
  white-space: normal;
}
.pifu-list .pifu-list-item .pifu-list-img{
  position: absolute;
  top: -10rpx;
  left: 60rpx;
  display: none;
  width: 238rpx;
  height: 236rpx;
}
.pifu-list .pifu-list-item.active .pifu-list-img{
  display: block;
}
